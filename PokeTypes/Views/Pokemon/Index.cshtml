@model IEnumerable<PokeTypes.Models.Pokemon>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pokemon:</h2>
@using (Html.BeginForm("Index", "Pokemon", FormMethod.Get)) {
    @Html.TextBox("searching")<input type="submit" value="Search" />
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PokemonName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type2)
        </th>
        <th></th>
    </tr>


@foreach(var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PokemonName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type2)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
